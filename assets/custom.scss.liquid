//ACCORDION
.section-accordion {
  .accordion {
    cursor: pointer;
    padding: 20px;
    width: 100%;
    border: none;
    text-align: left;
    outline: none;
    transition: 0.4s;
    position: relative;
    max-width: 900px;


    span.icon-acc {
      position: absolute;
      right: 4%;
      top: 39%;
      transition: 0.5s ease all;
    }

    &.active {

      span.icon-acc {
        top: 29%;
        transform: rotate(180deg);
        transition: 0.5s ease all;
        filter: brightness(100) invert(1);
      }

      +.panel {
        margin: 20px 0px;
        transition: 0.5s ease all;
      }
    }
  }

  .panel {
    padding: 0px 18px;
    background-color: white;
    max-height: 0;
    overflow: hidden;
    text-align: left;
    transition: max-height 0.2s ease-out;
  }

  .cont_accordion {
    padding-top: 5%;

    @media screen and (min-width:1024px) {
      width: 80%;
      margin: auto;
    }

    .tab {
      margin-bottom: 35px;
    }
  }
  h3{
    margin-bottom: 5px;
  }

  .line{
    border-top: 3px solid;
    width: 150px;
    margin: 0 0 20px 0;
  }
}