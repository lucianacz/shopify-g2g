}

.section-subtitle {
  font-size: 30px;
  font-weight: normal;
  text-shadow: none;
}

.section-title {
  text-align: center;
}

// FAQ
//ACCORDION
.section-accordion {
  .accordion {
    cursor: pointer;
    padding: 20px;
    width: 100%;
    border: none;
    text-align: left;
    outline: none;
    transition: 0.4s;
    position: relative;
    max-width: 900px;


    span.icon-acc {
      position: absolute;
      right: 4%;
      top: 39%;
      transition: 0.5s ease all;
    }

    &.active {

      span.icon-acc {
        top: 29%;
        transform: rotate(180deg);
        transition: 0.5s ease all;
        filter: brightness(100) invert(1);
      }

      +.panel {
        margin: 20px 0px;
        transition: 0.5s ease all;
      }
    }
  }

  .panel {
    padding: 0px 18px;
    background-color: white;
    max-height: 0;
    overflow: hidden;
    text-align: left;
    transition: max-height 0.2s ease-out;
  }

  .cont_accordion {
    padding-top: 5%;

    @media screen and (min-width:1024px) {
      width: 80%;
      margin: auto;
    }

    .tab {
      margin-bottom: 35px;
    }
  }

  h3 {
    margin-bottom: 5px;
  }

  .line {
    border-top: 3px solid;
    width: 150px;
    margin: 0 0 20px 0;
  }
}

/* ------- HOME PAGE -------- */
// SLIDE SECTION

%slide-height {
  height: 70vh;

  @media screen and (min-width: $large) {
    height: 100%;
  }
}

.slideshow__text-wrap {
  .h1 {
    text-shadow: none;
    font-size: 3em;

    @media screen and (min-width: $medium) {
      font-size: 4em;
    }
  }

  .mega-subtitle {
    font-style: italic;
    text-shadow: none;
    font-size: 25px;
  }

  li {
    img {
      width: 120px;
    }
  }
}

.slideshow-wrapper {
  @extend %slide-height;
}

.index-section--slideshow {
  @extend %slide-height;
}

.slideshow__image {
  @extend %slide-height;
}

// INGREDIENTS SECTION

.feature-section {
  display: flex;
  flex-direction: column;

  img {
    height: inherit;
  }

  .big-img {
    img {
      margin: 20px auto;
      width: 90%;

      @media screen and (min-width: $large) {
        width: 45%;
        margin: 0;
        margin-right: 10%;
      }
    }
  }

  .feature-row__item {
    display: flex;
    align-items: center;
    flex-direction: column;

    @media screen and (min-width: $large) {
      flex-direction: row;
    }

    .feature-row__text {
      display: flex;
      align-items: center;

      img {
        width: 100px;
      }
    }

    .featured-row__subtext {
      font-size: 16px;

      @media screen and (min-width: $large) {
        font-size: 0.9em;
      }

    }
  }
}

// COLLECTION SECTION HOME PAGE
.featured-collection {
  text-align: center;

  .price {
    align-items: center;
    margin-top: 10px;

    .price__regular,
    .price__sale {
      margin: 0;
    }
  }

  .h4 {
    font-size: 14px;
    font-weight: normal;
  }

  .product-card {
    height: 250px;
    margin: 20px 0;
    @media screen and (min-width: $large) {
      height: 300px;
    }
  }

  .product-form__item {
    flex-basis: inherit;
    margin: auto;
  }

  input{
    border: 1px solid rgba(0, 0, 0, 0.3);
  }

  @media screen and (min-width: $large) {
    form {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-bottom: 20px; 
    }

    .product-form__controls-group~.product-form__controls-group--submit {
      margin-top: 0;
    }
    span[data-add-to-cart-text]{
      font-size: 10px;
    }
  }
}

//LOGO BAR
.logos{
  text-align: center;
} 
.logo-bar{
  width: 90%;
  margin: auto;
  max-width: 1300px;
  .slick-track {
    display: flex;
    align-items: center;
  }

  .slick-arrow {
    background: rgba(0, 0, 0, 0.8);
    border-radius: 50%;
    padding: 15px;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 30;
  }

  .slick-prev:hover, .slick-prev:focus, .slick-next:hover, .slick-next:focus{
    background: rgba(0, 0, 0, 0.4);
  }

  .slick-prev {
    left: 0;
    &::before {
      content: "▴";
      transform: rotate(270deg);
      color: white;
    }
  }

  .slick-next {
    right: 0;
    &::before {
      content: "▴";
      transform: rotate(90deg);
      color: white;
    }
  }

  
}


//FOOTER
@media screen and (min-width: $medium) {
  .site-footer__social-icons {
    text-align: left;
  }
}